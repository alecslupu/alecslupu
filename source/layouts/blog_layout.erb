<% wrap_layout :layout do %>
  <div class="container py-6 md:py-10">
    <div class="mx-auto max-w-4xl">
      <div class="">
        <h1 class="pt-5 font-body text-3xl font-semibold text-primary sm:text-4xl md:text-5xl xl:text-6xl">
          <%= current_article.title %>
        </h1>
        <div class="flex items-center pt-5 md:pt-10">
          <div>
            <img src="/images/alecslupu.jpeg" class="h-20 w-20 rounded-full border-2 border-grey-70 shadow" alt="Alexandru Emil Lupu" />
          </div>
          <div class="pl-5">
            <span class="block font-body text-xl font-bold text-grey-10">By Alexandru Emil Lupu</span>
            <span class="block pt-1 font-body text-xl font-bold text-grey-30">
              <a href="<%= blog_month_path(current_article.date.year, current_article.date.month) %>"><%= current_article.date.strftime('%B') %></a>,
              <%= current_article.date.strftime('%d') %>
              <a href="<%= blog_year_path(current_article.date.year) %>">
                <%= current_article.date.strftime('%Y') %>
              </a>
            </span>
          </div>
        </div>
      </div>
      <div class="prose max-w-none pt-8"><%= yield %></div>
      <div class="flex pt-10">
        <% if current_article.tags.present? && current_article.tags.length > 0 %>
          <% current_article.tags.each_with_index do |tag, index| %>
            <a href="<%= tag_path(tag) %>" class="mr-2 rounded-xl bg-primary px-4 py-1 font-body font-bold text-white hover:bg-grey-20"><%= tag %></a>
          <% end %>
        <% end %>
        <% if current_article.data.category.present? %>
          <a href="<%= category_path(current_article.data.category) %>" class="mr-2 rounded-xl bg-secondary px-4 py-1 font-body font-bold text-white hover:bg-grey-20"><%= current_article.data.category %></a>
        <% end %>
      </div>

      <div class="mt-10 flex justify-between border-t border-lila py-12">
        <% if current_article.article_previous %>
          <a href="<%=  current_article.article_previous.url %>" class="flex items-center">
            <%= icon("ri-arrow-left-s-line", class: "w-6 h-6 text-primary") %>
            <span class="block pl-2 font-body text-lg font-bold uppercase text-primary md:pl-5">Previous Post</span>
          </a>
        <% else %>
          <a href="#" class="flex items-center"></a>
        <% end %>

        <% if current_article.article_next %>
          <a href="<%= current_article.article_next.url %>" class="flex items-center">
            <span class="block pr-2 font-body text-lg font-bold uppercase text-primary md:pr-5">Next Post</span>
            <%= icon("ri-arrow-right-s-line", class: "w-6 h-6 text-primary") %>
          </a>
        <% end %>
      </div>
      <div class="flex flex-col items-center border-t border-lila py-12 pt-12 md:flex-row md:items-start xl:pb-20">
        <div class="w-3/4 sm:w-2/5 lg:w-1/4 xl:w-1/5">
          <img src="/images/alecslupu.jpeg" class="rounded-full shadow" alt="Alexandru Emil Lupu" />
        </div>
        <div class="ml-0 text-center md:ml-10 md:w-5/6 md:text-left">
          <h3 class="pt-10 font-body text-2xl font-bold text-secondary md:pt-0">
            Alexandru Emil Lupu
          </h3>
          <p class="pt-5 font-body text-lg leading-8 text-secondary sm:leading-9 md:text-xl md:leading-9 lg:leading-9 xl:leading-9">
            I have more than 20 years experience in the Web Development area, during this time I've mastered a lot of skills,
            from e-commerce platforms implementation and presentation sites, code writing on online games.
          </p>
          <div class="flex items-center justify-center pt-5 md:justify-start">
            <% data.structure.social.each_with_index do |feat, i| %>
              <a href="<%= feat.url %>" class="pl-4">
                <%= icon(feat.icon, class: "w-6 h-6 text-primary hover:text-yellow") %>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>


<% end %>