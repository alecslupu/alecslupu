<div class="w-full z-50 top-0 py-3 sm:py-5 bg-gradient-to-r from-hero-gradient-from to-hero-gradient-to <%= current_page.data.homepage ? "fixed" : "" %>">
  <div class="container flex items-center justify-between">
    <div>
      <a href="/">
        <img src="/images/white-logo.svg" class="w-24 lg:w-[24rem]" alt="Alexandru Emil Lupu" />
      </a>
    </div>
    <div class="hidden lg:block">
      <ul class="flex items-center">
        <% if current_page.data.homepage %>
          <% data.structure.sections.each do |section| %>
            <% next unless section.enabled %>
            <li class="group pl-6">
              <span @click="triggerNavItem('#<%= section.id %>')" class="cursor-pointer pt-0.5 font-header font-semibold uppercase text-white"><%= section.name %></span>
              <span class="block h-0.5 w-full bg-transparent group-hover:bg-yellow"></span>
            </li>
          <% end %>
        <% else %>
          <% data.structure.sections.each do |section| %>
            <% next unless section.enabled %>
            <li class="group pl-6">
              <a href="<%= section.anchor %>" class="cursor-pointe pt-0.5 font-header font-semibold uppercase text-white"><%= section.name %></a>
              <span class="block h-0.5 w-full bg-transparent group-hover:bg-yellow"></span>
            </li>
          <% end %>
        <% end  %>
      </ul>
    </div>
    <div class="block lg:hidden">
      <button @click="mobileMenu = true">
        <%= icon("ri-menu-line", class: "w-6 h-6 text-white") %>
      </button>
    </div>
  </div>
</div>
